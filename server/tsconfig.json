{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "allowJs": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "types": [
            "node",
            "./src",
            "./lib/pokemon-showdown/sim"
        ]
    },
    "include": [
        "src/index.ts",
        "lib/pokemon-showdown/.data-dist/**/*",
        "lib/pokemon-showdown/.data-dist/**/*.json",
        "lib/pokemon-showdown/config/formats.js",
    ]
}