{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "outDir": ".aws-sam/build/PokemonSummaryEndpoint",
        "types": [
            "node",
            "./src",
            "./src/pokemon-showdown-lib/sim",
            "@types/aws-lambda",
            "@types/jest"
        ]
    },
    "include": [
        "src/app.ts",
        "src/pokemon-showdown-lib/.data-dist/**/*",
        "src/pokemon-showdown-lib/.data-dist/**/*.json",
        "src/pokemon-showdown-lib/config/formats.js",
    ]
}